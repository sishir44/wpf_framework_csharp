<Window x:Class="WPFApplication.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Dialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Height="100"  Content="Button" Click="Button_Click" />
            <Button Height="100"  Content="Open File Box" Click="OpenFileDialogEvent" />
            <Button Height="100"  Content="Save File Box" Click="SaveFileDialogEvent" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBox x:Name="ResultOpen" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" TextWrapping="Wrap"/>
        </StackPanel>
        
    </Grid>
</Window>
