<Window x:Class="WPFApplication.Expander"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Expander" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Expander Header="Fruit List" Grid.Row="0">
            <StackPanel>
                <Label>Apple</Label>
                <Label>Mango</Label>
                <Label>Banana</Label>
            </StackPanel>
        </Expander>

        <Expander Header="Vegetable List" Grid.Row="1">
            <StackPanel>
                <Label>Potato</Label>
                <Label>Tomato</Label>
                <Label>Onion</Label>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
